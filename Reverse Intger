
class Solution:
    def reverse(self, x: int) -> int:
        nega = False
        if x < 0:
            nega = True
            x = -x

        rev = 0
        while x > 0:
            last_digit = x % 10
            rev = rev * 10 + last_digit
            if rev > 2**31 - 1:
                return 0
            x = x // 10
    
        if nega:
            rev = -rev

        return rev
